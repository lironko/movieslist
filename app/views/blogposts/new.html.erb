<% provide(:title, 'New blog post') %>
<h1>New Blog Post</h1>

<div class="row">
  <div class="span8 offset2">
  	<%= form_for(@blogpost) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
  		<%= f.label :title %>
  		<%= f.text_field :title %>

  		<%= f.label :content %>
  		<%= f.text_area :content %>

  		<%= f.submit "Submit post" , class: "btn btn-large btn-primary" %>
  	<% end %>
  </div>
</div>