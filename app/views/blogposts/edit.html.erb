<% provide(:title, 'Edit blog post') %>
<h1>Edit Blog Post</h1>
<div class="row">
  <div class="span6 offset3">
  	<%= form_for @blogpost do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
  		<%= f.label :title %>
  		<%= f.text_field :title %>

  		<%= f.label :content %>
  		<%= f.text_area :content %>

  		<%= f.submit "Submit post" , class: "btn btn-large btn-primary" %>
  	<% end %>
  </div>
</div>